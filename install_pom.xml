<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jetbrains.teamcity</groupId>
  <artifactId>local-artifact-installer</artifactId>
  <version>${TeamCityVersion}</version>
  <properties>
    <teamcity-lib-path>${TeamCityDist}/webapps/ROOT/WEB-INF/lib/</teamcity-lib-path>
    <open-api-path>open-api</open-api-path>
    <teamcity-agent-lib-path>${TeamCityDist}/buildAgent/lib/</teamcity-agent-lib-path>
    <yavijava-version>6.0.05-25</yavijava-version>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <executions>
          <execution>
            <id>install-cloud-server</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>cloud-server</artifactId>
              <groupId>org.jetbrains.teamcity</groupId>
              <version>${TeamCityVersion}</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${teamcity-lib-path}/cloud-server.jar</file>
            </configuration>
          </execution>

          <execution>
            <id>install-cloud-server-api</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>cloud-server-api</artifactId>
              <groupId>org.jetbrains.teamcity</groupId>
              <version>${TeamCityVersion}</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${teamcity-lib-path}/cloud-server-api.jar</file>
            </configuration>
          </execution>

          <execution>
            <id>install-server</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>server</artifactId>
              <groupId>org.jetbrains.teamcity</groupId>
              <version>${TeamCityVersion}</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${teamcity-lib-path}/server.jar</file>
            </configuration>
          </execution>

          <execution>
            <id>install-web</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>web</artifactId>
              <groupId>org.jetbrains.teamcity</groupId>
              <version>${TeamCityVersion}</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${teamcity-lib-path}/web.jar</file>
            </configuration>
          </execution>

          <execution>
            <id>install-common-impl</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>common-impl</artifactId>
              <groupId>org.jetbrains.teamcity</groupId>
              <version>${TeamCityVersion}</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${teamcity-lib-path}/common-impl.jar</file>
            </configuration>
          </execution>

          <execution>
            <id>install-agent</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>agent</artifactId>
              <groupId>org.jetbrains.teamcity</groupId>
              <version>${TeamCityVersion}</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${teamcity-agent-lib-path}/agent.jar</file>
            </configuration>
          </execution>

          <execution>
            <id>install-trove4j</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>trove4j</artifactId>
              <groupId>org.jetbrains.teamcity.idea</groupId>
              <version>95.677</version>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
              <file>${teamcity-lib-path}/trove4j.jar</file>
            </configuration>
          </execution>

          <execution>
            <id>install-yavijava</id>
            <phase>package</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <artifactId>yavijava</artifactId>
              <groupId>com.toastcoders</groupId>
              <version>${yavijava-version}</version>
              <file>${basedir}/lib/yavijava-${yavijava-version}.jar</file>
              <packaging>jar</packaging>
              <createChecksum>true</createChecksum>
            </configuration>
          </execution>

        </executions>
      </plugin>
    </plugins>
  </build>
</project>